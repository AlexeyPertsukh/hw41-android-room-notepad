<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background"
    >

    <TextView
        android:text="FILTER"
        style="@style/StyleMainText"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        />

    <RadioGroup
        style="@style/StyleRadioGroup"
        >

        <RadioButton
            android:id="@+id/rbFilterNone"
            style="@style/StyleMainText"
            android:text="NONE" />

        <RadioButton
            android:id="@+id/rbFilterMonth"
            style="@style/StyleMainText"
            android:text="Month" />

        <RadioButton
            android:id="@+id/rbFilterWeek"
            style="@style/StyleMainText"
            android:text="Week" />

        <RadioButton
            android:id="@+id/rbFilterToday"
            style="@style/StyleMainText"
            android:text="Today" />
    </RadioGroup>

</LinearLayout>