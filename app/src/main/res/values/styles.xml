<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleMainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMainItalicText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMainEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:minHeight">48sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="StyleRadioButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50sp</item>
    </style>

    <style name="StyleDateTimeText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleColorTextView">
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">60sp</item>
    </style>


</resources>